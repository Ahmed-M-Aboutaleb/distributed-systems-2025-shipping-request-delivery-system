{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    // Customize or override rules here
    "@typescript-eslint/no-unused-vars": "warn",
    "semi": ["error", "always"]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
